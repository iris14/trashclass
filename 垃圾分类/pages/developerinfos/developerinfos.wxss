/* pages/developerinfos/developerinfos.wxss */
/*自定义导航*/
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  color: #fff;
  font-size:28rpx;
  letter-spacing:2px;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-green{
  background-color: #65ab31;
}
.overflow{
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.hidden{
  overflow: hidden;
}


/* 整个页面背景 */
page{
  background-color: #f0f0f0;
}
/* 典典的故事和介绍 */
.dian-story{
  background-color: #fff;
  padding: 40rpx;
}
/* 头标题 */
.head-title{
  margin-bottom: 40rpx;
  font-size: 46rpx;
}
/* 故事和典典介绍的共同样式 */
.story, .diandian{
  border-left: solid 10rpx #65ab31;
  padding-left: 20rpx;
  color: #888;
  font-family: "微软雅黑";
  font-size: 35rpx;
  line-height: 55rpx;
}
/* 故事 */
.story{
  margin-bottom: 20rpx;
}

/* 开发者的信息介绍 */
.all-person{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 40rpx 0;
}
/* 头像 */
.all-image{
  width: 150rpx;
  height: 150rpx;
  /* border: 1px solid #65ab31; */
  /* border-radius: 76rpx; */
  margin-right: 30rpx;
  float: left;
}
/* 基本信息的文字部分 */
.info-text{
  height: 160rpx;
  display: inline-block;
  /* border: 1px solid #000; */
}
/* 姓名 */
.all-name{
  color: #65ab31;
  font-family: "微软雅黑";
  font-size: 40rpx;
  margin: 25rpx 0 8rpx;
}
/* 学校 */
.all-school{
  color: #888;
}
/* 右边向上向下的图标 */
.caret-icon{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 60rpx 0 30rpx;
}
/* 详情样式 */
/* 显示详情样式 */
.show-detail{
  display: block;
}
/* 隐藏详情样式 */
.hide-detail{
  display: none;
}
/* 详细信息的每行 */
.detail-line{
  border-top: 1px solid #f0f0f0;
  padding: 25rpx 25rpx 25rpx 5rpx;
  color: #666;
  line-height: 50rpx;
}
/* 详细信息的所有属性名 */
.all-property{
  color: #888;
  margin-right: 50rpx;
}