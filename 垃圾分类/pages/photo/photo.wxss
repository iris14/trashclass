/* pages/photo/photo.wxss */

/*自定义导航*/

.nav {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.nav-title {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family: PingFang-SC-Medium;
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 2px;
}

.nav .back {
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}

.bg-green {
  background-color: #65ab31;
}

.overflow {
  overflow: auto;
}

.hidden {
  overflow: hidden;
}

/***********************************/

.showNone {
  /*不显示*/
  display: none;
}

.cameraBtn {
  /*拍照按钮*/
  width: 150rpx;
  height: 150rpx;
  position: relative;
  margin: 10rpx auto;
}

/**********识别结果卡片**********/

.isNoteShow {
  display: block;
}

.isNoteHide {
  display: none;
}

.noteCover {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 0;
  left: 0;
}

.noteBlock {
  width: 623rpx;
  background: #65ab31;
  margin: 40% auto;
  display: flex;
  align-items: center;
  position: relative;
  flex-direction: column;
  border-radius: 25rpx;
  border: 4px solid #fff;
  
}

.noteHide {
  /*卡片关闭按钮样式*//* background:rgba(255, 255, 255, 0.3); */
  height: 66rpx;
  width: 66rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 4;
}
.regTitle{
  /*识别结果标题*/
  color: #fff;
  font-size: 42rpx;
  font-family: "幼圆";
  margin:10rpx auto 30rpx auto;
}
.regRes {
  /*识别结果样式*/
  width: 480rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background: #7bb74e;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: #fff;
}
/*没有识别出垃圾类别的样式*/
.noTypename{
  color: #df3838;
  width: 460rpx;
  margin-bottom: 30rpx;
}

/*摄像头转换*/
.cover-4{
  position: absolute;
  bottom: 55rpx;
  right:60rpx;
  width:80rpx;
  height:80rpx;
}
/*相册*/
.album{
  position: absolute;
  bottom: 60rpx;
  left:60rpx;
  width:80rpx;
  height:60rpx;
}

/*****************************/
