/***********************************/
.garbage{
  margin: 70rpx 30rpx 80rpx 60rpx;
  float: left;
  /* border:1px solid #000; */
  width:250rpx;
}
.gartypeName{
  width: 180rpx;
  height: 60rpx;
  background: rgb(98, 170,46);
  border-radius: 120rpx;
  font-size:35rpx;
  /* font-family: "幼圆"; */
  padding: 14rpx 0rpx 0rpx 0;
  text-align: center;
  color: #fff;
}
.allGarName{
  font-size:40rpx;
  margin: 5rpx 0 0 20rpx;
  font-family: "黑体";
}
.garName{
  margin-top: 22rpx; 
}

.searchTool{
  /* 整行搜索和取消 */
  background:#65ab31; 
  padding-bottom:30rpx;
  width: 750rpx;
  display: inline-block;
}
.searchBox{
  /* 整个搜索框 */
  width:80%;
  border:1px solid #65ab31; 
  height:75rpx; 
  border-radius:100rpx;
  background: #fff;
  display: inline-block;
  margin-right: 15rpx;
  margin-left: 23rpx; 
  margin-top: 35rpx;
}
.searchIcon{
  /* 搜索框中的小图标 */
  width:9%; 
  height:70%; 
  display:inline-block; 
  margin:0 25rpx 10rpx 25rpx;
}
.iconImage{
  /* 搜索图标 */
  display:inline;
}
input{
  /* 搜索文本框 */
  width:80%; 
  display:inline-block; 
  height:100%;
  font-size: 30rpx;
}
.garbageName{
  /* 显示搜索出的垃圾名 */
  border-bottom:1px solid #e6e6e6; 
  margin:40rpx 0 0 40rpx; 
  padding-bottom:40rpx;
}
.haveNotGarbage{
  /* 显示无此垃圾的提示 */
  display: block;
  text-align: center;
  color: #333;
  margin-top: 30rpx; 
}
.showNone{
  /* 控制显示部分为空 */
  display: none;
}
.cancel{
  /* 取消 */
  font-size: 30rpx;
  display:inline-block; 
  color:#626C9D; 
  position:absolute; 
  line-height: 75rpx;
  top:35rpx; 
  left: 655rpx;
  z-index: 10;
}
