/*自定义导航*/
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  border-bottom:1px #f0f0f0 solid;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  color: #fff;
  font-size:28rpx;
  letter-spacing:2px;
}
.nav .search{   /* 搜索图标和文字 */
  position: absolute;
  top: 0;
  left: 5px;
  width: 32px;
  height: 44px;
  padding: 0 5px;
  bottom: 0;
  position: absolute;
  text-align: center;
}
.nav .search-icon{   /* 搜索图标 */
  width: 22px;
  height: 22px;
  margin-bottom: 3px;
}
.nav .search-text {   /* 搜索文字 */
  width: 32px;
  height: 20px;
  font-size: 10px;
  position: absolute;
  top: 10px;
}
.nav .feedback{   /* 反馈图标和文字 */
  position: absolute;
  top: 0;
  left: 40px;
  width: 32px;
  height: 44px;
  padding: 0 5px;
  bottom: 0;
  position: absolute;
  text-align: center;
}
.nav .feedback-icon{   /* 用户反馈图标 */
  width: 22px;
  height: 22px;
  margin-bottom: 3px;

}
.nav .feedback-text{    /* 反馈文字 */
  width: 32px;
  height: 20px;
  font-size: 10px;
  position: absolute;
  top: 10px;
}
.bg-green{
  background-color: #65ab31;
}
.overflow{
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.hidden{
  overflow: hidden;
}
