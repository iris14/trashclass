/* pages/search/search.wxss */
/*自定义导航*/
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  border-bottom:1px #f0f0f0 solid;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  color: #fff;
  font-size:28rpx;
  letter-spacing:2px;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-green{
  background-color: #65ab31;
}
.overflow{
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.hidden{
  overflow: hidden;
}
/***********************************/

/***********************************/
.garbage{
  font-size: 40rpx;
}
/* 热搜榜标题 */
.hot-title{
  margin-left: 60rpx;
  /* font-weight: bold; */
  font-size: 35rpx;
}
/* 热搜图标 */
.hot-icon{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 15rpx;
}
.hot-garbage{
  margin: 50rpx 20rpx 0 50rpx;
  width:280rpx;
  float: left;
  /* border:1px solid #000; */
}
.gartypeName{
  width: 180rpx;
  height: 60rpx;
  background: rgb(98, 170,46);
  border-radius: 120rpx;
  font-size:35rpx;
  /* font-family: "幼圆"; */
  padding: 14rpx 0rpx 0rpx 0;
  text-align: center;
  color: #fff;
}
.allGarName{
  font-size:35rpx;
  margin: 5rpx 0 0 20rpx;
  /* font-weight: bold; */
}
.garName{
  margin-top: 22rpx;
}
/* 热搜垃圾前的序号 */
.hot-number, .hot-text{
  color: #d81e06;
  font-weight: bold;
}
/* HOT */
.hot-text{
  font-style: italic;
  font-size: 25rpx;
}

.searchTool{
  /* 整行搜索和取消 */
  background:#65ab31; 
  padding-bottom:30rpx;
  width: 750rpx;
  display: inline-block;
}
.searchBox{
  /* 整个搜索框 */
  width:80%;
  border:1px solid #65ab31; 
  height:75rpx; 
  border-radius:100rpx;
  background: #fff;
  display: inline-block;
  margin-right: 15rpx;
  margin-left: 23rpx; 
  margin-top: 35rpx;
}
.searchIcon{
  /* 搜索框中的小图标 */
  width:9%; 
  height:70%; 
  display:inline-block; 
  margin:0 25rpx 10rpx 25rpx;
}
.iconImage{
  /* 搜索图标 */
  display:inline;
}
input{
  /* 搜索文本框 */
  width:80%; 
  display:inline-block; 
  height:100%;
  font-size: 30rpx;
}
.cancel{
  /* 取消 */
  font-size: 30rpx;
  display:inline-block; 
  color:#626C9D; 
  position:absolute; 
  line-height: 75rpx;
  /* top:18rpx; */
  left: 525rpx;
  z-index: 10;
}
/*语音按钮*/
.voice{
  display:inline-block; 
  width: 65rpx;
  height: 65rpx;
  position: absolute;
  left: 650rpx;
  top: 45rpx;
  z-index: 10;
}
.garbageName{
  /* 显示搜索出的垃圾名 */
  border-bottom:1px solid #e6e6e6; 
  margin:40rpx 0 0 40rpx; 
  padding-bottom:40rpx;
}
.haveNotGarbage{
  /* 显示无此垃圾的提示 */
  display: block;
  text-align: center;
  color: #333;
  margin-top: 30rpx; 
}
.showNone{
  /* 控制显示部分为空 */
  display: none;
}

