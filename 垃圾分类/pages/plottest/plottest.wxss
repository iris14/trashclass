/* pages/test/test.wxss */
/* iphone5 总宽 750rpx */
/*自定义导航*/
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.bg-green{
  background-color: #65ab31;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  color: #fff;
  font-size:28rpx;
  letter-spacing:2px;
}
.overflow{
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.hidden{
  overflow: hidden;
}
/* 以上都是导航栏和内容背景的调试样式 */

/*以下都是容器（内容）*/
/* 上面部分的总内容 */
.top{
  background-color: #528f25;
  position: relative;
  top: -15rpx;
  padding: 30rpx 0 35rpx;
}
/* 内容标题 */
.container-title{
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 45rpx;
  font-family: "幼圆";
  text-shadow: 5rpx 5rpx 5rpx #000;
  position: relative;
  top: 15rpx;
}
/* 欢迎内容 */
.container-toppart{
  background-color: #7bb74e;
  width: 600rpx;
  height: 266rpx;
  border-radius: 30rpx;
  margin: 0 auto;
  padding: 40rpx 30rpx 0;
}
/* 文字 */
.welcome-text{
  font-size: 30rpx;
  text-align: justify;
  line-height: 36rpx;
  color: #fff;
  width: 360rpx;
  /* height: 150rpx; */
  float: left;
}
/* 文字的第一个白点 */
.cycle{
  font-size: 50rpx;
}
/* 图 */
.test-icon{
  width: 220rpx;
  height: 220rpx;
  margin-left: 20rpx;
}

page{
  background-color: #f0f0f0;
}
/* 一个剧情的简介 */
.all-scene{
  width: 350rpx;
  /* height: 400rpx; */
  float: left;
  margin: 25rpx 0 25rpx 18rpx;
}
/* 场景标题 */
.all-topic{
  background-color: #65ab31;
  height: 80rpx;
  color: #fff;
  font-size: 35rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;     /* 弹性布局，居中前提 */
  align-items: center;    /* 上下居中 */
  justify-content: center;    /* 左右居中 */
}
/* 剧情名 */
.all-plotname{
  margin-left: 30rpx;
}
/* 包含剧情简介、头像、进入按钮 */
.all-content{
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
/* 剧情简介 */
.all-intro{
  text-align: justify;
  line-height: 36rpx;
  color: #000;
  font-size: 30rpx;
  margin: 0 20rpx 20rpx 20rpx;
  padding-top: 10rpx;
  height: 200rpx;
  /* text-align: center; */
}
/* 首行缩进 */
.text-none{
  color: transparent;
}
/* 包含头像和进入按钮 */
.img-btn{
  height: 120rpx;
}
/* 头像 */
.all-img{
  width: 120rpx;
  height: 120rpx;
  /* border: 1px solid #000; */
  float: left;
  margin-left: 10rpx;
}
/* 进入按钮 */
.enter-btn{
  position: relative;
  top: 25rpx;
  right: 0rpx;
}