/* pages/testscene/testscene.wxss */
/* iphone5 总宽 750rpx */
/*自定义导航*/
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  border-bottom:1px #f0f0f0 solid;
}
.bg-green{
  background-color: #65ab31;
}
.nav-title{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  color: #fff;
  font-size:28rpx;
  letter-spacing:2px;
}
.nav .back{
  width: 22px;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.overflow{
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.hidden{
  overflow: hidden;
}
/* 以上都是导航栏和内容背景的调试样式 */

/*以下都是容器（内容）*/
/* 内容标题 */
.container-title{
  width: 100%;
  text-align: center;
  position: absolute;
  /* left: 195rpx;   (750rpx-45rpx*8)/2;  iPhone5屏幕总宽度750rpx; 字体45rpx; 总共8个字; */
  color: #fff;
  font-size: 45rpx;
  font-family: "幼圆";
  text-shadow: 5rpx 5rpx 5rpx #000;
  top: 15rpx;
}
/* 内容总div外壳 */
.container{
  background-color: #7bb74e;
  width: 680rpx;
  /* height: 1110rpx; */
  margin: 50rpx auto;
  border-radius: 30rpx;
  padding-bottom: 0px;
}
/* 下面都是内容总div内的所有样式 */
/* 内容总div内的所有内容都放在类名为story的view中 */
.container-toppart{
  position: relative;
  top: -150rpx;
  font-size: 32rpx;
  color: #fff;
  /* height: 1110rpx; */
}
.story{
  text-align: justify;
  margin: 0 auto;
  width: 600rpx;
  /* height: 88rpx; */
  margin-bottom:50rpx ;
}
/* 故事片段 */
/* 首行两个字隐形（首行缩进） */
.textnone{
  color: transparent;
}
/* 整个题目：蝴蝶logo + 题目文字 */
.question{
  /* margin-top:150rpx; */
  font-size: 35rpx;
  width: 590rpx;
  margin: 0rpx auto;
}
/* 蝴蝶logo */
.butterfly-logo{
  width: 69rpx;
  height: 76rpx;
  margin-right: 20rpx; 
}
/* 题目中的关键字，即垃圾名 */
.question-key{
  color: #000;
}
/* 所有答案选项 */
.answers{
  /* margin-top: 30rpx;  */
  width: 590rpx;
  margin: 30rpx auto;
}
/* 每个答案选项的 共同样式 */
.answer-option{
  /* height: 76rpx; */
  padding: 20rpx 0;
  border: 6rpx solid #fff;
  margin-bottom: 32rpx;
  text-align: center;
  border-radius: 15rpx;
}
/* 每个答案选项 不同的背景色 */
.option1{
  background-color: #abc46b;
}
.option2{
  background-color: #88af54;
}
.option3{
  background-color: #428157;
}
.option4{
  background-color: #6fbe7d;
}
/* 显示用户答案和正确答案 */
.show-answers{
  margin: -80rpx 0 0;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}
.youyuan{
  font-family: "幼圆";
}
/* 查看典典科普的标签 */
.science-btn{
  display: flex;
  align-items: center;
  font-family: "幼圆";
  margin-left: 355rpx;
  /* flex-direction: row; */
}
/* 典典图标 */
.diandian{
  width: 100rpx;
  height: 100rpx;
}
.look-science{
  margin-left: 5rpx;
}
/* 最下面的三个按钮 */
.three-btns{
  display: flex;
  justify-content: space-between;
  /* flex-direction: row; */
  width: 590rpx;
  margin: 60rpx 0;
}
.last-btn, .next-btn, .stop-btn{
  /* display: inline-block; */
  border: solid 6rpx #fff;
  border-radius: 10rpx;
  text-align: center;
  padding: 10rpx 0;
}
.last-btn{
  width: 130rpx;
  background-color: #969696;
}
.next-btn{
  width: 130rpx;
  background-color: #65ab31;
}
.last-btn, .next-btn{
  margin-right: 43rpx;
}
.stop-btn{
  margin-right: 0rpx;
  width: 170rpx;
  background-color: #7bb74e;
}

/* 答错时，弹出的卡片提示 */
/* 整个卡片弹出（包括大背景） */
.show-card{    
  background-color: rgba(0,0,0,0.5);
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
}
.hide-card, .hide-answers{
  display: none;
}
/* 卡片块 */
.card-part{
  font-size: 32rpx;
  width: 570rpx;
  /* height: 800rpx; */
  background-color: #7bb74e;
  border: 10rpx #fff solid;
  border-radius: 20rpx;
  margin: 280rpx 0 0 80rpx;
  z-index: 2;
  padding-bottom: 50rpx;
}
/* 关闭卡片键 */
.close{
  display: flex;
  flex-direction: row-reverse;
}
.close-card{
  width: 70rpx;
  height: 70rpx;
  color: #fff;
}
/* 卡片的所有文字内容 */
.card-text{
  color: #fff;
  text-align: center;
}
/* 典典提示 */
.hint{
  margin-top: 30rpx;
  margin-bottom: 33rpx;
}
/* 典典科普标题 */
.science-title{
  font-size: 40rpx;
  margin-bottom: 35rpx; 
}
/* 典典科普内容 */
.science-content{
  width: 480rpx;
  margin-left: 45rpx;
  text-align:justify; 
}
.nextline{
  display: flex;
  flex-direction: row-reverse;
}
/* 卡片中点击下一题的按钮 */
.card-next-btn{
  width: 160rpx;
  border: 2rpx solid #fff;
  border-radius: 10rpx;
  padding: 18rpx 0;
  background-color: #65ab31;
  margin: 60rpx 45rpx 0 0;
}